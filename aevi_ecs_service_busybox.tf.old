resource "aws_ecs_service" "busybox-service" {
  name = "busybox-service"
  cluster = "${aws_ecs_cluster.aevi-app.id}"
  task_definition = "${aws_ecs_task_definition.busybox.arn}"
  desired_count = 1
  iam_role = "${aws_iam_role.ecsServiceRole.arn}"
  depends_on = ["aws_iam_role_policy.ecsServicePolicy"]

  load_balancer {
    elb_name = "${aws_elb.aevi-app.id}"
    container_name = "web"
    container_port = 80
  }
}
